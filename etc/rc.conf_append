# set up a private network on a cloned loopback device
cloned_interfaces="${cloned_interfaces} lo1"

# see /etc/hosts for network naming conventions
ifconfig_lo1="inet 192.168.0.1 netmask 255.255.255.0"
ifconfig_lo1_alias1="inet 192.168.0.2 netmask 255.255.255.255"
ifconfig_lo1_alias2="inet 192.168.0.3 netmask 255.255.255.255"
ifconfig_lo1_alias3="inet 192.168.0.4 netmask 255.255.255.255"

# ignore jail ips
syslogd_flags="-ss"

ezjail_enable="YES"

# packet filtering
pf_enable="YES"
pf_rules="/etc/pf.conf"
pf_flags="-F all"

# network time
#ntpd_enable="YES"
#ntpd_sync_on_start="YES"
